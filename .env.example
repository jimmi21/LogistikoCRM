# LogistikoCRM Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-get_random_secret_key
DEBUG=False  # Set to True only for local development

# Database Configuration (PostgreSQL recommended for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=logistikocrm_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (CRITICAL for accounting office)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password
EMAIL_PORT=587

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB

# Backup Configuration
BACKUP_DIR=/var/backups/logistikocrm
BACKUP_RETENTION_DAYS=30
