# LogistikoCRM Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-get_random_secret_key
DEBUG=False  # Set to True only for local development

# Database Configuration (PostgreSQL recommended for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=logistikocrm_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (CRITICAL for accounting office)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password
EMAIL_PORT=587

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB

# Backup Configuration
BACKUP_DIR=/var/backups/logistikocrm
BACKUP_RETENTION_DAYS=30

# IoT Device Configuration (Tasmota)
# SECURITY: These IPs should be configured per environment
TASMOTA_IP=192.168.178.27
TASMOTA_PORT=80
TASMOTA_DEVICE_NAME=Πόρτα Γραφείου

# Fritz!Box VoIP Monitor
# SECURITY: Generate a secure random token for production
FRITZ_API_TOKEN=your-secure-random-token-here

# myDATA AADE Configuration
MYDATA_SUBSCRIPTION_KEY=your_mydata_subscription_key

# Archive Root for Client Files
# Can be local path or network mount
# Examples:
#   - Local: /path/to/project/media
#   - Network (Linux): /mnt/nas/logistiko/
#   - Network (Windows mapped): Z:\\Logistiko\\
ARCHIVE_ROOT=/path/to/archive
