# ============================================================================
# LogistikoCRM - Development Environment Configuration
# ============================================================================
# Copy this to .env and customize for your environment
# NEVER commit .env to git!
#
# 游릭 = Required for basic functionality
# 游리 = Optional (feature will be disabled if not set)
# 游댮 = Required for production
# ============================================================================

# ============================================================================
# 游릭 CORE DJANGO SETTINGS (Required)
# ============================================================================

# Secret Key - Generate new one for production
# To generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-dev-key-change-in-production

# Debug Mode - ALWAYS False in production!
# When True: Enables CORS_ALLOW_ALL_ORIGINS for local network development
DEBUG=True

# Allowed Hosts (comma-separated, no spaces)
# For development with network access, you can leave this commented out
# The settings.py already allows 192.168.*.*, 10.*.*.*, 172.16.*.*
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com


# ============================================================================
# 游릭 DATABASE CONFIGURATION
# ============================================================================

# For Development: SQLite (no setup required)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For Production: PostgreSQL (uncomment and configure)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=logistikocrm_db
# DB_USER=your_db_user
# DB_PASSWORD=your_secure_db_password
# DB_HOST=localhost
# DB_PORT=5432


# ============================================================================
# 游릭 EMAIL CONFIGURATION
# ============================================================================

# For Development: Console backend (emails print to terminal)
EMAIL_BACKEND_CONSOLE=true

# For Production: Real SMTP (uncomment and configure)
# EMAIL_BACKEND_CONSOLE=false
# EMAIL_HOST=smtp.gmail.com
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_specific_password
# EMAIL_PORT=587
# EMAIL_USE_TLS=true

# Email Rate Limiting (optional, defaults are fine)
# EMAIL_RATE_LIMIT=2.0
# EMAIL_BURST_LIMIT=5
# EMAIL_MAX_RETRIES=3


# ============================================================================
# 游리 FILE STORAGE & ARCHIVE (Optional - defaults to project media/)
# ============================================================================

# Maximum upload size in bytes (default: 10MB)
# MAX_UPLOAD_SIZE=10485760

# Archive root for client files
# Default: PROJECT_ROOT/media
# Network examples:
#   - Linux NAS: /mnt/nas/logistiko/
#   - Windows: Z:\\Logistiko\\
# ARCHIVE_ROOT=/path/to/archive


# ============================================================================
# 游리 BACKUP CONFIGURATION (Optional - for production)
# ============================================================================

# BACKUP_DIR=/var/backups/logistikocrm
# BACKUP_RETENTION_DAYS=30


# ============================================================================
# 游리 IoT DEVICES - TASMOTA (Optional)
# ============================================================================
# Controls electric door lock via Tasmota smart switch
# Leave commented to disable feature

# TASMOTA_IP=192.168.178.27
# TASMOTA_PORT=80
# TASMOTA_DEVICE_NAME=먪꺮픣풤 풉픠풤픥풧풢픤
# TASMOTA_DOOR_PULSE_DURATION=0.5


# ============================================================================
# 游리 VOIP - FRITZ!BOX MONITOR (Optional)
# ============================================================================
# Monitors office phone calls via Fritz!Box CallMonitor (port 1012)
# Auto-creates tickets for unanswered calls
# Leave commented to disable feature

# FRITZ_API_TOKEN=your-secure-random-token-here
# Generate secure token: python -c "import secrets; print(secrets.token_urlsafe(32))"


# ============================================================================
# 游리 VOIP - ZADARMA CLOUD PBX (Optional)
# ============================================================================
# Cloud PBX with click-to-call and webhook notifications
# Get credentials from: https://zadarma.com/en/support/api/
# Leave commented to disable feature

# ZADARMA_KEY=your-zadarma-api-key
# ZADARMA_SECRET=your-zadarma-api-secret

# Optional: Forward unmatched calls to another CRM
# VOIP_FORWARDING_IP=
# VOIP_FORWARD_URL=


# ============================================================================
# 游리 myDATA - AADE TAX AUTHORITY (Optional)
# ============================================================================
# Integration with Greek Tax Authority (AADE) for invoice submission
# Required for production accounting offices
# Leave commented to disable feature

# MYDATA_USER_ID=your_mydata_username
# MYDATA_SUBSCRIPTION_KEY=your_mydata_subscription_key
# MYDATA_IS_SANDBOX=True  # Use sandbox for testing


# ============================================================================
# 游리 GSIS - TAX REGISTRY API (Optional)
# ============================================================================
# Lookup company details by VAT number (품풙풒)
# Requires GSIS API credentials from gsis.gr
# Leave commented to disable feature

# GSIS_USERNAME=your_gsis_username
# GSIS_PASSWORD=your_gsis_password


# ============================================================================
# 游댮 PRODUCTION SECURITY SETTINGS
# ============================================================================
# Uncomment these for production deployment

# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True


# ============================================================================
# DEVELOPMENT NOTES
# ============================================================================
#
# Minimal setup for local development:
# 1. Copy this file to .env
# 2. Keep DEBUG=True and SQLite settings
# 3. Use EMAIL_BACKEND_CONSOLE=true
# 4. Everything else is optional!
#
# For network access (React frontend from another device):
# 1. Ensure DEBUG=True (enables CORS for all origins)
# 2. Django: python manage.py runserver 0.0.0.0:8000
# 3. React: Set VITE_API_URL in frontend/.env to your IP
#
# For production deployment:
# 1. Generate new SECRET_KEY
# 2. Set DEBUG=False
# 3. Configure PostgreSQL
# 4. Configure real SMTP email
# 5. Set ALLOWED_HOSTS to your domain
# 6. Enable security settings (SSL, HSTS, etc)
# 7. Configure optional features (VoIP, myDATA) as needed
#
# ============================================================================
